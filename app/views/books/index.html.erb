<p id="notice"><%= notice %></p>

<h3>Books</h3>

<p><%= link_to "New book", new_book_path, class: "btn btn-success" %> </p>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Raiting</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author.name + ' ' + book.author.surname %></td>
        <td><%= book.status %></td>
        <td><%= book.raiting %></td>
        <td>
        <%= link_to "Show", book_path(book), class: "btn btn-default btn-xs" %>
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary btn-xs" %>
        <%= link_to "Delete", book_path(book), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
