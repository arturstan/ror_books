<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Why want read</th>
      <th>Review</th>
      <th>Raiting</th>
      <th>Data insert</th>
      <th>Date start reading</th>
      <th>Date finish reading</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.why_want_read %></td>
        <td><%= book.review %></td>
        <td><%= book.raiting %></td>
        <td><%= book.data_insert %></td>
        <td><%= book.date_start_reading %></td>
        <td><%= book.date_finish_reading %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

